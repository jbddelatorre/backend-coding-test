{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "./node_modules/.bin/nodemon index.js",
    "test": "mocha tests",
    "start": "node index.js",
    "lint": "./node_modules/.bin/eslint src/",
    "lint:fix": "./node_modules/.bin/eslint src/ --fix",
    "coverage": "nyc --reporter=html --reporter=text npm test",
    "load": "./node_modules/.bin/artillery run artillery.yaml",
    "test:load": "forever start -o out.log ./node_modules/.bin/artillery run artillery.yaml",
    "test:load:stop": "forever stop ./node_modules/.bin/artillery"
  },
  "pre-push": "lint, coverage",
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "artillery": "^1.6.0-28",
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "express-winston": "^3.2.1",
    "forever": "^1.0.0",
    "sqlite3": "^4.0.6",
    "swagger-jsdoc": "^3.3.0",
    "swagger-ui-express": "^4.0.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2"
  }
}
